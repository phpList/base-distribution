{
    "name": "phplist/base-distribution",
    "description": "A distribution of phpList, the world's most popular open source newsletter manager",
    "type": "project",
    "keywords": [
        "phplist",
        "email",
        "newsletter",
        "manager"
    ],
    "homepage": "https://www.phplist.com/",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "oliver@phplist.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/phpList/base-distribution/issues",
        "forum": "https://discuss.phplist.org/",
        "source": "https://github.com/phpList/base-distribution"
    },
    "require": {
        "php": "~7.0.0 || ~7.1.0 || ~7.2.0",

        "phplist/phplist4-core": "4.0.x-dev",
        "phplist/rest-api": "4.0.x-dev",

        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5.0",
        "squizlabs/php_codesniffer": "^3.2.0",
        "phpstan/phpstan": "^0.7.0",
        "nette/caching": "^2.5.0 || ^3.0.0",
        "nikic/php-parser": "^3.0.0",
        "phpmd/phpmd": "^2.6.0"
    },
    "suggest": {
        "phplist/web-frontend": "4.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "PhpList\\BaseDistribution\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpList\\BaseDistribution\\Tests\\": "Tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.0.8"
        }
    },
    "scripts": {
        "list-modules": [
            "PhpList\\PhpList4\\Composer\\ScriptHandler::listModules"
        ],
        "create-directories": [
            "PhpList\\PhpList4\\Composer\\ScriptHandler::createBinaries",
            "PhpList\\PhpList4\\Composer\\ScriptHandler::createPublicWebDirectory"
        ],
        "update-configuration": [
            "PhpList\\PhpList4\\Composer\\ScriptHandler::createGeneralConfiguration",
            "PhpList\\PhpList4\\Composer\\ScriptHandler::createBundleConfiguration",
            "PhpList\\PhpList4\\Composer\\ScriptHandler::createRoutesConfiguration",
            "PhpList\\PhpList4\\Composer\\ScriptHandler::createParametersConfiguration",
            "PhpList\\PhpList4\\Composer\\ScriptHandler::clearAllCaches"
        ],
        "post-install-cmd": [
            "@create-directories",
            "@update-configuration"
        ],
        "post-update-cmd": [
            "@create-directories",
            "@update-configuration"
        ],
        "post-create-project-cmd": [
            "@create-directories",
            "@update-configuration"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        },
        "symfony-app-dir": "bin",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "Tests"
    }
}
